<?xml version="1.0" encoding="utf-8"?>

<!DOCTYPE hibernate-configuration PUBLIC
        "-//Filters/Filters Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>

    <session-factory>

        <property name="hibernate.connection.driver_class">org.h2.Driver</property>

        <property name="hibernate.connection.url">jdbc:h2:tcp://localhost/~/parcial2</property>

        <property name="hibernate.connection.username">sa</property>

        <property name="hibernate.connection.password"></property>

        <property name="hibernate.dialect">org.hibernate.dialect.H2Dialect</property>

        <property name="hibernate.transaction.auto_close_session">true</property>

        <property name="hibernate.hbm2ddl.auto">update</property>

        <property name="hibernate.generate_statistics">false</property>

        <property name="cache.provider_class">org.hibernate.cache.internal.NoCachingRegionFactory</property>

        <property name="hibernate.show_sql">false</property>

        <property name="hibernate.format_sql">false</property>

        <property name="hibernate.ejb.use_class_enhancer">true</property>

        <!-- List of XML mapping files -->

        <mapping class="Encapsulation.Friendship"/>

        <mapping class="Encapsulation.LikeDislike"/>

        <mapping class="Encapsulation.Notification"/>

        <mapping class="Encapsulation.Photo"/>

        <mapping class="Encapsulation.Post"/>

        <mapping class="Encapsulation.Profile"/>

        <mapping class="Encapsulation.Tag"/>

        <mapping class="Encapsulation.Timeline"/>

        <mapping class="Encapsulation.User"/>

        <mapping class="Encapsulation.Album"/>

        <mapping class="Encapsulation.Comment"/>

        <mapping class="Encapsulation.Event"/>

        <mapping class="Encapsulation.Wall"/>







    </session-factory>

</hibernate-configuration>